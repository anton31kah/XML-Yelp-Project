        "Resources": {
            "RedisMaster": {
                "Type": "AWS::EC2::Instance",
                "Properties": {
                    "KeyName": { "Ref": "KeyName" },
                    "BlockDeviceMappings" : [ 
                        {
                            "DeviceName" : "/dev/xvda",
                            "Ebs" : { "VolumeSize" : "20" }
                        }
                     ],
                    "ImageId": {
                    "Fn::FindInMap": [
                        "AMIRegionMap",
                        { "Ref": "AWS::Region" },
                        "AMILinux2"
                        ]
                    },
                    "InstanceType": { "Ref": "InstanceType" },
                    "Monitoring": "false",
                    "NetworkInterfaces" : [{
                        "GroupSet" : [{ "Ref": "RedisMasterSecurityGroup" }],
                        "AssociatePublicIpAddress" : "true",
                        "DeviceIndex" : "0",
                        "DeleteOnTermination" : "true",
                        "SubnetId" : { "Fn::ImportValue" : {"Fn::Sub": "${NetworkStackName}-PublicSubnet1" } }
                      }],
                    "Tags": [
                        {
                            "Key": "Name",
                            "Value": { "Ref": "AWS::StackName" }
                        },
                        {
                            "Key": "XMLProject",
                            "Value": "Spark"
                        }
                    ]
                }
            },
            "RedisMasterSecurityGroup" : {
                "Type" : "AWS::EC2::SecurityGroup",
                "Properties" : {
                    "GroupDescription" : "RedisMasterSecurityGroup",
                    "SecurityGroupIngress" : [ 
                        {"IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : { "Ref" : "SSHLocation"}}
                    ],
                    "VpcId" : { "Fn::ImportValue" : {"Fn::Sub": "${NetworkStackName}-VPCID" } 
                    }
                }
            }
            
